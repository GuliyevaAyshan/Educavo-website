@model User
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    string userString = HttpContextAccessor.HttpContext.Session.GetString("ValidUser");
    User user = null;

    if (userString != null)
    {
        user = JsonConvert.DeserializeObject<User>(userString);
    }
    Layout = null;
}



<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Educavo Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/areas/assets/vendors/flag-icon-css/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/areas/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/areas/assets/vendors/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/areas/assets/vendors/simple-line-icons/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/areas/assets/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/areas/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="//cdn.materialdesignicons.com/5.4.55/css/materialdesignicons.min.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="shortcut icon" href="~/areas/assets/images/fav-orange.png" />
    <link rel="stylesheet" href="~/areas/assets/css/vertical-layout-light/style.css">
    <!-- endinject -->

</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-stretch auth auth-img-bg">
                <div class="row flex-grow">
                    <div class="col-lg-6 d-flex align-items-center justify-content-center">
                        <div class="auth-form-transparent text-left p-3">
                            <div class="brand-logo">
                                <img src="~/areas/assets/images/dark-logo.png" alt="logo">
                            </div>
                            <h4 style="color:orangered;font-size:24px;">Registration</h4>
                            <h6 class="font-weight-light">Educavo members</h6>
                            <form class="pt-3" asp-area="admin" asp-controller="account" asp-action="register" method="post" enctype="multipart/form-data">
                                <div class="text-danger" asp-validation-summary="All"></div>
                                <div class="form-group">
                                    <label>Name</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg border-left-0" asp-for="@Model.Name placeholder=" Username">
                                        <span class="text-danger" asp-validation-for="@Model.Name"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label>Surname</label>
                                    <div class="input-group">
                                        <div class="input-group-prepend bg-transparent">
                                            <span class="input-group-text bg-transparent border-right-0">
                                                <i class="mdi mdi-account-outline text-primary"></i>
                                            </span>
                                        </div>
                                        <input type="text" class="form-control form-control-lg border-left-0" asp-for="@Model.Surname placeholder=" Username">
                                        <span class="text-danger" asp-validation-for="@Model.Surname"></span>
                                    </div>
                                </div>
                                <div class="form-group">
                                <label>Username</label>
                                <div class="input-group">
                                    <div class="input-group-prepend bg-transparent">
                                        <span class="input-group-text bg-transparent border-right-0">
                                            <i class="mdi mdi-account-outline text-primary"></i>
                                        </span>
                                    </div>
                                    <input type="text" class="form-control form-control-lg border-left-0" asp-for="@Model.Username placeholder=" Username">
                                    <span class="text-danger" asp-validation-for="@Model.Username"></span>
                                </div>
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            <div class="input-group">
                                <div class="input-group-prepend bg-transparent">
                                    <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-email-outline text-primary"></i>
                                    </span>
                                </div>
                                <input type="email" class="form-control form-control-lg border-left-0" asp-for="@Model.Email placeholder=" Email">
                                <span class="text-danger" asp-validation-for="@Model.Email"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Image</label>
                            <div class="input-group">
                                <div class="input-group-prepend bg-transparent">
                                    <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-picture-in-picture-bottom-right text-primary"></i>
                                    </span>
                                </div>
                                <input type="file" class="form-control form-control-lg border-left-0" asp-for="@Model.ImageFile placeholder=" Email">
                                <span class="text-danger" asp-validation-for="@Model.ImageFile"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <div class="input-group">
                                <div class="input-group-prepend bg-transparent">
                                    <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-lock-outline text-primary"></i>
                                    </span>
                                </div>
                                <input type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" asp-for="@Model.Password placeholder=" Password">
                                <span class="text-danger" asp-validation-for="@Model.Password"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Confirm Password</label>
                            <div class="input-group">
                                <div class="input-group-prepend bg-transparent">
                                    <span class="input-group-text bg-transparent border-right-0">
                                        <i class="mdi mdi-lock-outline text-primary"></i>
                                    </span>
                                </div>
                                <input type="password" class="form-control form-control-lg border-left-0" id="exampleInputPassword" asp-for="@Model.ConfirmPassword placeholder=" Password">
                                <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Desc" class="control-label"></label>
                            <textarea asp-for="Desc" class="form-control" rows="6"></textarea>
                            <span asp-validation-for="Desc" class="text-danger"></span>
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsTeamMember" /> @Html.DisplayNameFor(model => model.IsTeamMember)
                            </label>
                        </div>
                        <div class="form-group">
                            <label for="Gender">Gender</label>
                            <br />
                            <input type="radio" id="male" value="true" asp-for="@Model.Gender">
                            <label for="male">Male</label>

                            <input type="radio" id="female" value="false" asp-for="@Model.Gender">
                            <label for="female">Female</label>

                            <span asp-validation-for="@Model.Gender" class="text-danger"></span>
                        </div>
                       
                        <div class="mt-3">
                            <button type="submit" class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn">SIGN UP</button>
                        </div>

                        </form>
                    </div>
                    </div>
                    <div class="col-lg-6 register-half-bg d-flex flex-row">
                        <p class="text-white font-weight-medium text-center flex-grow align-self-end">Copyright &copy; 2021  All rights reserved.</p>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/areas/assets/vendors/js/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/areas/assets/js/off-canvas.js"></script>
    <script src="~/areas/assets/js/hoverable-collapse.js"></script>
    <script src="~/areas/assets/js/template.js"></script>
    <script src="~/areas/assets/js/settings.js"></script>
    <script src="~/areas/assets/js/todolist.js"></script>
    <!-- endinject -->
    <script src="https://cdn.ckeditor.com/4.16.1/standard/ckeditor.js"></script>
    <script src="https://cdn.ckeditor.com/4.16.0/full/ckeditor.js"></script>
    <script src="~/areas/assets/js/ckeditor.js"></script>
</body>


