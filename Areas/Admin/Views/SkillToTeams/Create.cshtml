@model EduCavoFinal.Models.SkillToTeam

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Create Team and Skills relation</h4>

                    <form asp-area="admin" asp-controller="skilltoteams" asp-action="create" method="post" class="forms-sample" enctype="multipart/form-data">

                        <div class="form-group">
                            <label for="exampleFormControlSelect2">Skill</label>
                            <select asp-for="@Model.SkillId" asp-items="@(new SelectList(ViewBag.Skill, "Id","Name"))" class="form-control" id="exampleFormControlSelect2">
                            </select>
                            <span class="text-danger" asp-validation-for="@Model.SkillId"></span>

                        </div>
                        <div class="form-group">
                            <label for="exampleFormControlSelect2">Team</label>
                            <select asp-for="@Model.TeamId" asp-items="@(new SelectList(ViewBag.Team, "Id","FullName"))" class="form-control" id="exampleFormControlSelect2">
                            </select>
                            <span class="text-danger" asp-validation-for="@Model.TeamId"></span>

                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Persentage" for="Persentage">Persentage</label>
                            <input asp-for="@Model.Persentage" type="number" class="form-control" id="Persentage" placeholder="Persentage">
                            <span class="text-danger" asp-validation-for="@Model.Persentage"></span>
                        </div>

                        <button type="submit" class="btn btn-success mr-2">Create</button>
                        <button asp-area="admin" asp-controller="skilltoteams" asp-action="index" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>