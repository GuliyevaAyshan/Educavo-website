@model IEnumerable<EduCavoFinal.Models.Courses>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">


    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Courses</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>

                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        AddedDate
                                    </th>
                                    <th>
                                        Desc
                                    </th>
                                    <th>
                                        Fea
                                    </th>
                                    <th>
                                        Duration
                                    </th>

                                    <th>
                                        Lectures
                                    </th>
                                    <th>
                                        Quizzes
                                    </th>
                                    <th>
                                        Category
                                    </th>
                                    <th>
                                        Skill Level
                                    </th>
                                    <th>
                                        Price Level
                                    </th>
                                    <th>
                                        Duration Time
                                    </th>
                                    <th>
                                        Course Type
                                    </th>
                                    <th>
                                        Assesments
                                    </th>
                                    <th>
                                        WhatLern
                                    </th>
                                    <th>
                                        Video
                                    </th>
                                    <th>

                                        <a asp-area="admin" asp-controller="courses" asp-action="create" class="btn btn-success btn-rounded btn-fw">Create New</a>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>

                                    <td>
                                        <img style="border-radius: 0; height:80px !important; width:auto !important" src="~/Uploads/Images/@item.Image" />
                                        @(item.Image != null? @item.Image : "")
                                    </td>
                                    <td>
                                        @(item.Title != null? @item.Title : "")

                                    </td>
                                    <td>
                                        @item.AddedDate

                                    </td>
                                    <td>
                                        @(item.Desc!=null && item.Desc.Length>100? item.Desc.Substring(0, 100) : item.Desc)

                                    </td>
                                    <td>
                                        @item.Fea

                                    </td>
                                    <td>
                                        @item.Duration

                                    </td>
                                    <td>
                                        @item.Lectures

                                    </td>
                                    <td>
                                        @item.Quizzes

                                    </td>
                                    <td>
                                        @item.Categories.Name

                                    </td>
                                    <td>
                                        @item.SkillLevel.Name

                                    </td>

                                    <td>
                                        @item.PriceLevel.Levels

                                    </td>
                                    <td>
                                        @item.DurationTime.Times

                                    </td>
                                    <td>
                                        @item.CourseTypes.Types

                                    </td>
                                    <td>
                                        @item.Assessments

                                    </td>
                                    <td>
                                        @(item.WhatLearn!=null && item.WhatLearn.Length>100? item.WhatLearn.Substring(0, 100) : item.WhatLearn)

                                    </td>
                                    <td>
                                        <video style="border-radius: 0; height:30px !important; width:auto !important" src="~/Uploads/Videos/@item.Video" />
                                        @(item.Video != null? @item.Video : "")
                                    </td>
                                    <td>
                                        @if (Model != null)
                                        {
                                            <a asp-area="admin" asp-controller="courses" asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning" title="edit"><i class="mdi mdi-edit"></i>Edit</a>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="courses" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i>Delete</a>
                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
