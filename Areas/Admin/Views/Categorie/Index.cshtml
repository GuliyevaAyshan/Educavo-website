@model IEnumerable<EduCavoFinal.Models.Categories>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="container">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Categories</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>

                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        OnlineCategoriesCount
                                    </th>
                                    <th>
                                        IsOnline
                                    </th>
                                  
                                    <th>

                                        <a asp-area="admin" asp-controller="categorie" asp-action="create" class="btn btn-success btn-rounded btn-fw">Create New</a>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>

                                        <td>
                                            <img style="border-radius: 0; height:80px !important; width:auto !important" src="~/Uploads/Images/@item.Image" />
                                            @(item.Image != null? @item.Image : "")
                                        </td>
                                        <td>
                                            @(item.Name != null? @item.Name : "")

                                        </td>
                                        <td>
                                            @item.OnlineCategoriesCount

                                        </td>
                                        
                                        <td>
                                            @item.IsOnline

                                        </td>
                                        
                                        
                                        <td>
                                            @if (Model != null)
                                            {
                                                <a asp-area="admin" asp-controller="categorie" asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning" title="edit"><i class="mdi mdi-edit"></i>Edit</a>
                                                <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="categorie" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i>Delete</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>