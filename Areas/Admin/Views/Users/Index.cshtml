@model IEnumerable<EduCavoFinal.Models.User>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Users</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Image
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Surname
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Username
                                    </th>
                                    <th>
                                        Password
                                    </th>
                                    <th>
                                        Description
                                    </th>
                                    <th>
                                        IsTeamMember
                                    </th>
                                    <th>
                                        Gender
                                    </th>
                                    <th>
                                        AddedDate
                                    </th>
                                    <th>

                                        <a asp-area="admin" asp-controller="account" asp-action="register" class="btn btn-success btn-rounded btn-fw">Create New</a>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        <img style="border-radius: 0; height:80px !important; width:auto !important" src="~/Uploads/Images/@item.Image" />
                                        @(item.Image != null? @item.Image : "")
                                    </td>
                                    <td>
                                        @(item.Name != null? @item.Name : "")

                                    </td>
                                    <td>
                                        @(item.Surname != null? @item.Surname : "")

                                    </td>
                                    <td>
                                        @(item.Email != null? @item.Email : "")

                                    </td>

                                    <td>
                                        @(item.Username != null? @item.Username : "")

                                    </td>
                                    <td>
                                        @(item.Password != null? @item.Password : "")

                                    </td>
                                    <td>
                                        @(item.Desc!=null && item.Desc.Length>100? item.Desc.Substring(0,100): item.Desc)

                                    </td>
                                    <td>
                                        @(item.IsTeamMember==true?"Member":"Not member")

                                    </td>
                                    <td>
                                        @(item.Gender==true?"Male":"Female")
                                    </td>
                                    <td>
                                        @item.AddedDate

                                    </td>
                                    <td>
                                        @if (Model != null)
                                        {
                                            <a asp-area="admin" asp-controller="users" asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning" title="edit"><i class="mdi mdi-edit"></i>Edit</a>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="users" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i>Delete</a>
                                        }
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Desc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsTeamMember)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AddedDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Desc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsTeamMember)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
