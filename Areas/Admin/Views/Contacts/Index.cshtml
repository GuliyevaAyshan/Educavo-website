@model IEnumerable<EduCavoFinal.Models.Contact>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">Contacts</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Address
                                    </th>
                                    <th>
                                        Phone
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                   
                                    <th>

                                        <a asp-area="admin" asp-controller="contacts" asp-action="create" class="btn btn-success btn-rounded btn-fw">Create New</a>

                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                      
                                        <td>
                                            @(item.Address != null? @item.Address : "")

                                        </td>
                                        <td>
                                            @(item.Phone != null? @item.Phone : "")

                                        </td>
                                        <td>
                                            @(item.Email != null? @item.Email : "")

                                        </td>
                                       
                                        <td>
                                            @if (Model != null)
                                            {
                                                <a asp-area="admin" asp-controller="contacts" asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning" title="edit"><i class="mdi mdi-edit"></i>Edit</a>
                                                <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="contacts" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i>Delete</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>