@model EduCavoFinal.Models.Contact

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Contacts</h4>

                    <form asp-area="admin" asp-controller="contacts" asp-action="edit" method="post" class="forms-sample" enctype="multipart/form-data">

                        <div class="form-group">
                            <label asp-for="@Model.Address" for="Address">Address</label>
                            <input asp-for="@Model.Address" type="text" class="form-control" id="Address" placeholder="Address">
                            <span class="text-danger" asp-validation-for="@Model.Address"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Phone" for="Phone">Phone</label>
                            <input asp-for="@Model.Phone" type="text" class="form-control" id="Phone" placeholder="Phone">
                            <span class="text-danger" asp-validation-for="@Model.Phone"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Email" for="text">Email</label>
                            <textarea asp-for="@Model.Email" type="text" class="form-control" id="Email" placeholder="Email"></textarea>
                            <span class="text-danger" asp-validation-for="@Model.Email"></span>
                        </div>
                        <input type="hidden" asp-for="@Model.Id" />
                        <button type="submit" class="btn btn-success mr-2">Update</button>
                        <button asp-area="admin" asp-controller="contacts" asp-action="index" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>