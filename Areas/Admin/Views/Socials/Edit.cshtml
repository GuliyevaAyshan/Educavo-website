@model EduCavoFinal.Models.Social

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row d-flex justify-content-center">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Update Socials</h4>

                    <form asp-area="admin" asp-controller="socials" asp-action="edit" method="post" class="forms-sample" enctype="multipart/form-data">

                        <div class="form-group">
                            <label asp-for="@Model.Link" for="Link">Link</label>
                            <input asp-for="@Model.Link" type="text" class="form-control" id="Link" placeholder="Link">
                            <span class="text-danger" asp-validation-for="@Model.Link"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.Icon" for="Icon">Icon</label>
                            <input asp-for="@Model.Icon" type="text" class="form-control" id="Icon" placeholder="Icon">
                            <span class="text-danger" asp-validation-for="@Model.Icon"></span>
                        </div>
                        <input type="hidden" asp-for="@Model.Id" />
                        <button type="submit" class="btn btn-success mr-2">Update</button>
                        <button asp-area="admin" asp-controller="socials" asp-action="index" class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>