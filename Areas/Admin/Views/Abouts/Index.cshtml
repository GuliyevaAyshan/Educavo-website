@model IEnumerable<EduCavoFinal.Models.About>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="container">

    <!--About Us-->
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title ml-2">About Us</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Video
                                    </th>
                                    <th>
                                        Title
                                    </th>
                                    <th>
                                        Desc
                                    </th>
                                    <th>
                                        Students
                                    </th>
                                    <th>
                                        CGPA
                                    </th>
                                    <th>
                                        Graduates
                                    </th>
                                    <th>
                                       
                                            <a asp-area="admin" asp-controller="abouts" asp-action="create" class="btn btn-success btn-rounded btn-fw">Create New</a>
                                     
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) 
                                { 
                                <tr>
                                    <td>
                                        <video style="border-radius: 0; height:80px !important; width:auto !important" src="~/Uploads/Videos/@item.Video"/>
                                        @(item.Video != null? @item.Video : "")
                                    </td>
                                   
                                    <td>
                                        @(item.Title != null? @item.Title : "")

                                    </td>
                                    <td>
                                        @(item.Desc != null? @item.Desc : "")

                                    </td>
                                    <td>
                                        @item.Students

                                    </td>
                                    <td>
                                        @item.CGPA

                                    </td>
                                    <td>
                                        @item.Graduates

                                    </td>
                                    <td>
                                        @if (Model != null)
                                        {
                                            <a asp-area="admin" asp-controller="abouts" asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning" title="edit"><i class="mdi mdi-edit"></i>Edit</a>
                                            <a onclick="return confirm('Are you sure?')" asp-area="admin" asp-controller="abouts" asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger" title="delete"><i class="mdi mdi-delete"></i>Delete</a>
                                        }
                                    </td>
                                </tr>
                                    }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
