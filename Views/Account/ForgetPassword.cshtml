
@using Microsoft.AspNetCore.Http
@using Newtonsoft.Json
@inject IHttpContextAccessor HttpContextAccessor


@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    VMBreadcrumb vmBreadcrumb = new VMBreadcrumb() { Preview = "Home", Current = "Reset" };
}
<!-- Main content Start -->
<div class="main-area">
    <!-- Breadcrumbs Start -->
    <partial name="_BreadcrumbPartial" model="vmBreadcrumb" />
    <!-- Register Section -->
    <section class="register-section pt-100 pb-100">
        <div class="container">
            <div class="register-box">
                @if (HttpContextAccessor.HttpContext.Session.GetString("wrongMail") == "true")
                {
                    HttpContextAccessor.HttpContext.Session.Remove("wrongMail");

                    <div class="alert alert-danger">
                        Mail is wrong
                    </div>
                }
                <div class="sec-title text-center mb-30">
                    <h2 class="title mb-10">Reset Password</h2>
                    <span>Please send email bellow.</span>
                </div>
                <!-- Login Form -->
                <div class="styled-form">
                  
                    <form id="contact-form" asp-controller="account" asp-action="forgetpassword">
                        <div id="form-messages" class="text-danger" asp-validation-summary="All"></div>
                        <div class="form-group col-lg-12 col-md-12 col-sm-12 text-center">
                            <input type="email" name="email" placeholder="Email*">
                        </div>
                        <div class="row clearfix">

                            <div class="form-group col-lg-12 col-md-12 col-sm-12 text-center">
                                <button type="submit" class="readon register-btn"><span class="txt">Send</span></button>
                            </div>

                        </div>
                    </form>
                </div>

            </div>
        </div>
    </section>
</div>
