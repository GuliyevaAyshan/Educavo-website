@model VMResetPassword
@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
    VMBreadcrumb vmBreadcrumb = new VMBreadcrumb() { Preview = "Home", Current = "Reset" };
}

<!-- Main content Start -->
<div class="main-area">
    <!-- Breadcrumbs Start -->
    <partial name="_BreadcrumbPartial" model="vmBreadcrumb" />
    <!-- Register Section -->
    <section class="register-section pt-100 pb-100">
        <div class="container">
            <div class="register-box">

                <div class="sec-title text-center mb-30">
                    <h2 class="title mb-10">Reset Password</h2>
                </div>
                <!-- Login Form -->
                <div class="styled-form">
                    
                    <form id="contact-form" asp-controller="account" asp-action="resetpassword" method="post">
                        <div class="row clearfix">

                            <div id="form-messages" class="text-danger" asp-validation-summary="All"></div>
                            <div class="form-group col-lg-12">
                                <input type="password" id="puser" asp-for="@Model.Password" placeholder="Password" required>
                                <span class="text-danger" asp-validation-for="@Model.Password"></span>
                            </div>

                            <div class="form-group col-lg-12">
                                <input type="password" id="Confirm" asp-for="@Model.ConfirmPassword" placeholder="Confirm Password" required>
                                <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
                            </div>


                            <div class="form-group col-lg-12 col-md-12 col-sm-12 text-center">
                                <button type="submit" class="readon register-btn"><span class="txt">Send</span></button>
                            </div>

                           

                        </div>

                    </form>
                </div>

            </div>
        </div>
    </section>
</div>

