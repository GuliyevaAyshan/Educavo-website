@model VMCustomer
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    VMBreadcrumb vmBreadcrumb = new VMBreadcrumb() { Preview = "Home", Current = "Register" };
}

<!-- Main content Start -->
<div class="main-area">
    <!-- Breadcrumbs Start -->
    <partial name="_BreadcrumbPartial" model="vmBreadcrumb" />
    <!-- Register Section -->
    <section class="register-section pt-100 pb-100">
        <div class="container">
            <div class="register-box">

                <div class="sec-title text-center mb-30">
                    <h2 class="title mb-10">Create New Account</h2>
                </div>
                <!-- Login Form -->
                <div class="styled-form">
                    <div id="form-messages" class="text-danger" asp-validation-summary="All"></div>
                    <form id="contact-form" asp-controller="Home" asp-action="register" method="post">
                        <div class="row clearfix">

                            <div class="form-group col-lg-12 mb-25">
                                <input type="text" id="Name" asp-for="Name" placeholder="First Name" required>
                                <span class="text-danger" asp-validation-for="Name"></span>
                            </div>

                            <div class="form-group col-lg-12">
                                <input type="text" id="surname" asp-for="Surname" placeholder="Last Name" required>
                                <span class="text-danger" asp-validation-for="Surname"></span>
                            </div>

                            <div class="form-group col-lg-12">
                                <input type="email" id="email" asp-for="Email" placeholder="Email address " required>
                                <span class="text-danger" asp-validation-for="Email"></span>
                            </div>

                            <div class="form-group col-lg-12">
                                <input type="text" id="username" asp-for="Username" placeholder="Username" required>
                                <span class="text-danger" asp-validation-for="Username"></span>
                            </div>

                            <div class="form-group col-lg-12">
                                <input type="password" id="puser" asp-for="Password" placeholder="Password" required>
                                <span class="text-danger" asp-validation-for="Password"></span>
                            </div>

                            <div class="form-group col-lg-12">
                                <input type="password" id="Confirm" asp-for="ConfirmPassword" placeholder="Confirm Password" required>
                                <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
                            </div>


                            <div class="form-group col-lg-12 col-md-12 col-sm-12 text-center">
                                <button type="submit" class="readon register-btn"><span class="txt">Sign Up</span></button>
                            </div>

                            <div class="form-group col-lg-12 col-md-12 col-sm-12">
                                <div class="users">Already have an account? <a asp-controller="Home" asp-action="Login">Sign In</a></div>
                            </div>

                        </div>

                    </form>
                </div>

            </div>
        </div>
    </section>
</div>

